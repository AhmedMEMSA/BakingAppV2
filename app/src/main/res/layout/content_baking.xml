<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/colorBackgroundLight"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ahmedmemsa.nanodegree.baking.Activities.BakingActivity"
    tools:showIn="@layout/activity_baking">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_recipes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginTop="16dp" />

    <ImageView
        android:id="@+id/iv_progress_try_again"
        android:layout_width="54dp"
        android:background="@drawable/xml_selector_trans_light"
        android:layout_height="54dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_refresh_accent"
        android:visibility="gone"
        android:contentDescription="@string/try_again" />

    <TextView
        android:id="@+id/tv_progress_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        tools:text="Loading..." />

</LinearLayout>
